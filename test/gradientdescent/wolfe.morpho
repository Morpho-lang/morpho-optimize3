// Test the LineSearchController on a quadratic
import optimize3

fn func(x, y, z) {
    return (x-0.5)^2 + (y-1)^2 + 0.25*(z-4)^2
}

var start = Matrix([20,3.1,0])

var adapt = FunctionAdapter(func, start=start)

var control = WolfeLineSearchController(adapt, verbosity="normal")

control.optimize(100)

print adapt.get()
