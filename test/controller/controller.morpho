// Test controller base class 
import optimize3

fn func(x, y, z) {
    return x + y + z 
}

fn c(x, y, z) {
    return x + z - 1
}

fn d(x, y, z) {
    return 1 - (x^2 + y^2 + z^2)
}

var adapt = FunctionAdapter(func, start=Matrix([0, 0, 0]), constraints=[c, d], inequalitycount=1)

var con = OptimizationController(adapt, verbosity="silent")

print con.value() 
// expect: 0

print con.constraintvalue()
// expect: [ -1 ]
// expect: [ 1 ]

print con.constraintgradient() 
// expect: [ 1 0 ]
// expect: [ 0 0 ]
// expect: [ 1 0 ]
